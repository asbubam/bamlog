<% if @user.errors.messages.any? %>
	<div class="error_messages">
		<%= @user.errors.full_messages %>
	</div>
<% end %>

<%= form_for @user do |f| %>
	<div class="field">
		<%= f.label :login, "id" %>

		<% if @user.new_record? %>
			<%= f.text_field :login, :class => 'text' %>
		<% else %>
			<%= @user.login %>
		<% end %>
	</div>

	<div class="field">
		<%= f.label :password, "pw" %>
		<%= f.password_field :password, :class => 'text' %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation, "pw_confirm" %>
		<%= f.password_field :password_confirmation, :class => 'text' %>
	</div>

	<div class="field">
		<%= f.label :name, "name" %>
		<%= f.text_field :name, :class => 'text' %>
	</div>

	<div class="actions">
		<%= f.submit("submit", :class => "submit") %>
		<%= link_to "Back", root_path %>
	</div>
<% end %>
